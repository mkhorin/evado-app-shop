<template id="categories">
  <div class="page">

    <breadcrumbs :cart="cart">
      <template #path>
        <li class="breadcrumb-item" data-t="">Main</li>
      </template>
    </breadcrumbs>

    <h1 data-t="">Main categories</h1>

    <div class="loadable-container">

      <search @search="onSearch"></search>

      <div class="category-list">
        <div class="row">
          <div v-for="item of items" class="col-md-6 col-lg-4">
            <div class="category-card">
              <a @click.prevent="onCategory(item.id)" href="#">
                <img :src="item.icon" :alt="item.description" class="img-thumbnail img-fluid">
              </a>
              <h3>
                <a @click.prevent="onCategory(item.id)" href="#">{{item.name}}</a>
              </h3>
            </div>
          </div>
        </div>
      </div>

      <pagination @change="load"></pagination>

      <div v-show="!loading && empty" class="alert-warning alert">
        <span data-t="">No categories found</span>
      </div>

      <div v-show="loading" class="loader">
        <i class="fa fa-spinner fa-spin"></i>
      </div>
    </div>
  </div>
</template>